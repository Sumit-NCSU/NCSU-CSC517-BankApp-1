<% if @showing_admins %>
<h1>Manage Admins</h1>
<% else %>
<h1>Manage Users</h1>
<% end %>

    <p id="notice"><%= notice %></p>

<table class="table table-hover">
  <tr>
    <td>User ID</td>
    <td>User Name</td>
    <td>User Email</td>
    <td>Link to <% if @showing_admins %>Delete Admin<%else%>View<%end%></td>
  </tr>

  <% if !@users.nil? then @users.each do |user| %>
          <tr>
            <td><%= user.id %>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if @showing_admins %>
                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %>
              <%else%>
                <%=link_to 'Show', user %>
              <%end%>
            </td>
          </tr>
      <% end %>
  <% end %>
</table>

<br />

<%if @showing_admins%><%= link_to 'Create Admin', :controller => :users, :action => :new_admin  %><br />
<%else %><%= link_to 'New Account', new_account_path %><br/>
<% end %>

<% end %>

