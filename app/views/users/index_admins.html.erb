<% authUser = User.find(session[:user_id]) %>

<% if authUser.is_admin %>

<h1>Manage Admins</h1>

<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <tr>
    <td>User ID</td>
    <td>User Name</td>
    <td>User Email</td>
    <td>Delete</td>
  </tr>

  <% if !@admins.nil? then @admins.each do |user| %>
          <tr>
            <td><%= user.id %>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if !user.is_default and !user == authUser %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %><% end %>
            </td>
          </tr>
      <% end %>
  <% end %>
</table>

<br />

<%= link_to 'Create Admin', :controller => :users, :action => :new_admin  %><br />

<% end %>

<%= link_to 'Back', home_path%>
