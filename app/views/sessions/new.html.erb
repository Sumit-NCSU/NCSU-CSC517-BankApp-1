<% @page_title = 'Login' -%>
<hr>
<h1 align="center">Login</h1>
<hr>
<div class="container" align="center">
<% if flash[:notice] %>
  <h3><%= flash[:notice] %></h3>
<% end %>

<%= form_tag(:controller => 'sessions', :action => 'create') do %>
  <p>Email:<br> <%= text_field_tag :login_email %></p>
  <p>Password:<br><%= password_field_tag :login_password %></p>
  <%= submit_tag('Log In') %>
<% end %>
<p>New User? <%= link_to 'SignUp!', signup_path %> </p>
</div>