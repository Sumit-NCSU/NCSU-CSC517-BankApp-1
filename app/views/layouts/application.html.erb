<!DOCTYPE html>
<html>
<head>
  <title>BankApplication</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="container">

<nav class="navbar navbar-default ">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Home - Welcome Page Fix', root_path %></li>
        <li class="<%= 'active' if current_page?(accounts_path) %>"><%= link_to 'Accounts', accounts_path %></li>
        <li class="<%= 'active' if current_page?(friends_path) %>"><%= link_to 'Friends', friends_path %></li>
        <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to 'Users', users_path %></li>
        <li class="<%= 'active' if current_page?(transactions_path) %>"><%= link_to 'Transactions', transactions_path %></li>
        <li class="<%= 'active' if current_page?(logout_path) %>"><%= link_to 'Logout', logout_path %></li>

      </ul>
    </div>
  </div>
</nav>


<%= yield %>
</body>
</html>