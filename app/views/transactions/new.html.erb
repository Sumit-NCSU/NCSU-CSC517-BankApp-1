<%= form_for @transaction do |f| %>
    <% if @transaction.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
            <% @transaction.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <h1>New Transaction</h1>
    <div class="field">
      <%= f.label :txn_type %><br />
      <%= f.select :txn_type, options_for_select(Transaction::TYPES), {}, {:multiple => false} %>
    </div>
    <div class="field">
      Other Account (TODO: dynamically change either to_account or from_account_id somehow) <br />
      <%= f.select :to_account, options_for_select(Account.all.map {|a| a.account_number}), {}, {:multiple => false} %>
    </div>
    <div class="field">
      <%= f.label :amount %><br />
      <%= f.text_field :amount %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>